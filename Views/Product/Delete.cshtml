@model _2280601466_NguyenNgocKhanh.Models.Product

<h2>Delete Product</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
    <p>
        <strong>Price:</strong> @Model.Price.ToString("C")<br />
        <strong>Description:</strong> @Model.Description<br />
        <strong>Category:</strong> @(Model.Category?.Name ?? "No Category")<br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 150px;" />
        }
    </p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>