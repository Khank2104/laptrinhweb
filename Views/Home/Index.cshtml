@model IEnumerable<_2280601466_NguyenNgocKhanh.Models.Product>

<h2 class="mb-4">Product List</h2>

<p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Go to Product Management</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No products found.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit:cover; height:200px;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted mb-1">@product.Price.ToString("C")</p>
                        <p class="card-text">@product.Description</p>
                        <span class="badge bg-secondary">
                            @((product.Category != null && !string.IsNullOrEmpty(product.Category.Name)) ? product.Category.Name : "No Category")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
}