@model IEnumerable<_2280601466_NguyenNgocKhanh.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ngày đặt</th>
            <th>Khách hàng</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.CustomerName</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@order.Id">Chi tiết</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@order.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
