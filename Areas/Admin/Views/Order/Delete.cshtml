@model _2280601466_NguyenNgocKhanh.Models.Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<h2>Bạn có chắc chắn muốn xóa đơn hàng này không?</h2>

<dl class="row">
    <dt class="col-sm-2">Ngày đặt</dt>
    <dd class="col-sm-10">@Model.OrderDate</dd>

    <dt class="col-sm-2">Khách hàng</dt>
    <dd class="col-sm-10">@Model.CustomerName</dd>

    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TotalAmount</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
