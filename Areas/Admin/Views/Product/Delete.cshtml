@model _2280601466_NguyenNgocKhanh.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>@Model.Name</h4>
    <p>Category: @Model.Category?.Name</p>
    <p>Price: @Model.Price.ToString("C")</p>
    <p>Description: @Model.Description</p>

    <form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
